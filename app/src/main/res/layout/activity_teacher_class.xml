<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher_class">

    <TextView
        android:id="@+id/className1"
        android:layout_width="324dp"
        android:layout_height="79dp"
        android:layout_marginTop="268dp"
        android:text="TextView"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="388dp"
        android:layout_height="217dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/attendence_btn1"
        android:layout_width="102dp"
        android:layout_height="98dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="372dp"
        android:background="@drawable/button"
        android:text="點名"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/notification_btn1"
        android:layout_width="102dp"
        android:layout_height="98dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/button"
        android:text="通知"
        app:layout_constraintBottom_toBottomOf="@+id/status_btn1"
        app:layout_constraintStart_toEndOf="@+id/status_btn1"
        app:layout_constraintTop_toTopOf="@+id/status_btn1" />

    <Button
        android:id="@+id/status_btn1"
        android:layout_width="102dp"
        android:layout_height="98dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/button"
        android:text="狀態"
        app:layout_constraintBottom_toBottomOf="@+id/attendence_btn1"
        app:layout_constraintStart_toEndOf="@+id/attendence_btn1"
        app:layout_constraintTop_toTopOf="@+id/attendence_btn1"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/teacher_noty"
        android:layout_width="404dp"
        android:layout_height="249dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/className1" />

</androidx.constraintlayout.widget.ConstraintLayout>